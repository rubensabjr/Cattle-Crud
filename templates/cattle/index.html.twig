{% extends 'base.html.twig' %}

{% block body %}
    <style>
        th {
            text-align: center;
        }

        #list {
            box-shadow: 0px 0px 15px #0004; 
            padding: 15px; 
            margin-bottom: 20px; 
            width: 70%;
        }

        .title {
            text-align: center;
            margin-bottom: 20px;
        }

        #new {
            margin: 15px 0 15px 0;
        }
    </style>

    <div class="container" id="list">
        <h3 class="title"> {{title}} </h3>

        <a  href="{{ path('create') }}" class="btn btn-primary" id="new">
            Novo
        </a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="danger">
                        <th>#</th>
                        <th>Código</th>
                        <th>Leite (L)</th>
                        <th>Ração (Kg)</th>
                        <th>Peso (Kg)</th>
                        <th>Nascimento</th>
                        <th>Ações</th> 
                    </tr>
                </thead>
                <tbody>
                    {% for cattle in cattles %}
                        <tr class="info text-center">
                            <td>{{ cattle.id }}</td>
                            <td> {{ cattle.code }} </td>
                            <td> {{ cattle.milk }} </td>
                            <td> {{ cattle.ration }} </td>
                            <td> {{ cattle.weight }} </td>
                            <td> {{ cattle.birth.format('d-m-Y') }} </td>
                            <td> <a  href="{{ path('getById', {id: cattle.id}) }}" class="btn btn-primary btn-sm">Ver</a> </td>  
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}