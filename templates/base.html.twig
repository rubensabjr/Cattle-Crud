<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %} {{ title }} {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" 
                href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" 
                integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
                crossorigin="anonymous">

            <link 
                rel="stylesheet" 
                href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" 
                integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" 
                crossorigin="anonymous" 
                referrerpolicy="no-referrer">
            
            <link rel="stylesheet" 
                href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" 
                integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" 
                crossorigin="anonymous" 
                referrerpolicy="no-referrer">

            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script 
                src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js">
            </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" 
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" 
                crossorigin="anonymous">
            </script>

            <script 
                src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" 
                integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" 
                crossorigin="anonymous" 
                referrerpolicy="no-referrer">
            </script>

            <script 
                src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pt-BR.min.js">
            </script>

            <script>
                window.setTimeout(function() {
                    $(".alert").fadeTo(500, 0).slideUp(500, function(){
                        $(this).remove(); 
                    });
                }, 2000);
            </script>
            
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default" style="background-color: #e3f2fd;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button 
                        type="button" 
                        class="navbar-toggle collapsed" 
                        data-toggle="collapse" 
                        data-target="#collapse" 
                        aria-expanded="false">

                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">
                        <i class="fa fa-home fa-fw"></i>
                        &nbsp;
                        Home
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('getAll') }}">Gado</a></li>
                        <li><a href="{{ path('slaughter') }}">Abate</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Relatórios
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('milkWeek') }}">Leite por Semana</a></li>
                                <li><a href="{{ path('slaughtered') }}">Animais Abatidos</a></li>
                                <li><a href="{{ path('rationWeek') }}">Ração por Semana</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container p-4">
            {% for message in app.flashes('success') %}
                <div class="row" style="display: flex; justify-content: center;">
                    <div class="alert alert-success text-center" style="width: auto;">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="row" style="display: flex; justify-content: center;">
                    <div class="alert alert-danger text-center" style="width: auto;">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}

            <div class="row"  
                 style="height: 100%;
                        display: flex; 
                        justify-content: center;
                        align-items: start"
            >
            
                {% block body %}
                    <style>
                        .jumbotron {
                            box-shadow: 0px 0px 15px #0004; 
                            padding: 15px; 
                            background-color: #e3f2fd;
                        }

                        #report {
                            margin-top: 20px;
                        }
                    </style>

                    <div class="col-md-6"> 
                        <div class="jumbotron text-center">
                            <i class="fa fa-smile-o fa-5x" id="report"></i>    
                            <h2>Bem Vindo!</h2>
                            <p>Sistema de gestão de bovinos</p>
                        </div>
                    </div>
                {% endblock %}
            </div> 
        </div>
    </body>
</html>
